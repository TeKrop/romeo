<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5" >

        <fr.valentinporchet.prototypephil.TouchDisplayView
            android:id="@+id/touch_display_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

        <Button
            android:id="@+id/animate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/animate"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".4">

        <ImageButton
            android:id="@+id/black_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_black" />

        <ImageButton
            android:id="@+id/blue_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue" />

        <ImageButton
            android:id="@+id/cyan_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_cyan" />

        <ImageButton
            android:id="@+id/green_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_green" />

        <ImageButton
            android:id="@+id/orange_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_orange" />

        <ImageButton
            android:id="@+id/pink_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_pink" />

        <ImageButton
            android:id="@+id/purple_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_purple" />

        <ImageButton
            android:id="@+id/red_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_red" />

        <ImageButton
            android:id="@+id/yellow_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_yellow" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".4"
        android:weightSum="8">

        <ImageButton
            android:id="@+id/small_size_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_small" />

        <ImageButton
            android:id="@+id/normal_size_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_normal" />

        <ImageButton
            android:id="@+id/big_size_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_big" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/eraser_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_eraser" />

    </LinearLayout>

</LinearLayout>

